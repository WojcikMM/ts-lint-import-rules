{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es6"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "./rules",
        "removeComments": true,
        "strict": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules",
            "./node_modules/@types"
        ],
        "types": [
            "mocha",
            "chai",
            "node"
        ]
    },
    "include": [
        "src/rules/*"
    ]
}